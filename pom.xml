<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>


    <groupId>com.sia</groupId>
    <artifactId>client</artifactId>
    <version>1.0.0</version>
    <name>sia-client</name>
    <description>client applicaiton of spankodds</description>

    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <java.version>1.8</java.version>
        <maven.compiler.target>1.8</maven.compiler.target>
        <maven.compiler.source>1.8</maven.compiler.source>
        <maven.jar.plugin.version>3.2.0</maven.jar.plugin.version>
        <!-- following to skip unit test when running " mvn clean package" -->
        <maven.test.skip>true</maven.test.skip>
    </properties>

    <dependencies>
        <dependency>
            <groupId>com.sia</groupId>
            <artifactId>swingx-action</artifactId>
            <version>1.6.5</version>
            <scope>system</scope>
            <systemPath>${pom.basedir}/jars/swingx-action-1.6.5-1.jar</systemPath>
        </dependency>
        <dependency>
            <groupId>com.sia</groupId>
            <artifactId>swingx-autocomplete</artifactId>
            <version>1.6.5</version>
            <scope>system</scope>
            <systemPath>${pom.basedir}/jars/swingx-autocomplete-1.6.5-1.jar</systemPath>
        </dependency>
        <dependency>
            <groupId>com.sia</groupId>
            <artifactId>swingx-common</artifactId>
            <version>1.6.5</version>
            <scope>system</scope>
            <systemPath>${pom.basedir}/jars/swingx-common-1.6.5-1.jar</systemPath>
        </dependency>
        <dependency>
            <groupId>com.sia</groupId>
            <artifactId>swingx-core</artifactId>
            <version>1.6.5</version>
            <scope>system</scope>
            <systemPath>${pom.basedir}/jars/swingx-core-1.6.5-1.jar</systemPath>
        </dependency>
        <dependency>
            <groupId>com.sia</groupId>
            <artifactId>swingx-graphics</artifactId>
            <version>1.6.5</version>
            <scope>system</scope>
            <systemPath>${pom.basedir}/jars/swingx-graphics-1.6.5-1.jar</systemPath>
        </dependency>
        <dependency>
            <groupId>com.sia</groupId>
            <artifactId>swingx-painters</artifactId>
            <version>1.6.5</version>
            <scope>system</scope>
            <systemPath>${pom.basedir}/jars/swingx-painters-1.6.5-1.jar</systemPath>
        </dependency>
        <dependency>
            <groupId>com.sia</groupId>
            <artifactId>swingx-plaf</artifactId>
            <version>1.6.5</version>
            <scope>system</scope>
            <systemPath>${pom.basedir}/jars/swingx-plaf-1.6.5-1.jar</systemPath>
        </dependency>
        <dependency>
            <groupId>com.sia</groupId>
            <artifactId>activemq-all</artifactId>
            <version>5.15.12</version>
            <scope>system</scope>
            <systemPath>${pom.basedir}/jars/activemq-all-5.15.12.jar</systemPath>
        </dependency>
        <dependency>
            <groupId>com.sia</groupId>
            <artifactId>jide-grids</artifactId>
            <version>0.0.0</version>
            <scope>system</scope>
            <systemPath>${pom.basedir}/jars/jide-grids.jar</systemPath>
        </dependency>
        <dependency>
            <groupId>com.sia</groupId>
            <artifactId>jide-common</artifactId>
            <version>0.0.0</version>
            <scope>system</scope>
            <systemPath>${pom.basedir}/jars/jide-common.jar</systemPath>
        </dependency>
        <dependency>
            <groupId>com.sia</groupId>
            <artifactId>jide-components</artifactId>
            <version>0.0.0</version>
            <scope>system</scope>
            <systemPath>${pom.basedir}/jars/jide-components.jar</systemPath>
        </dependency>
        <dependency>
            <groupId>com.sia</groupId>
            <artifactId>jide-dialogs</artifactId>
            <version>0.0.0</version>
            <scope>system</scope>
            <systemPath>${pom.basedir}/jars/jide-dialogs.jar</systemPath>
        </dependency>
        <dependency>
            <groupId>com.sia</groupId>
            <artifactId>jide-dock</artifactId>
            <version>0.0.0</version>
            <scope>system</scope>
            <systemPath>${pom.basedir}/jars/jide-dock.jar</systemPath>
        </dependency>
        <dependency>
            <groupId>com.sia</groupId>
            <artifactId>jide-pivot</artifactId>
            <version>0.0.0</version>
            <scope>system</scope>
            <systemPath>${pom.basedir}/jars/jide-pivot.jar</systemPath>
        </dependency>
        <dependency>
            <groupId>com.sia</groupId>
            <artifactId>jide-shortcut</artifactId>
            <version>0.0.0</version>
            <scope>system</scope>
            <systemPath>${pom.basedir}/jars/jide-shortcut.jar</systemPath>
        </dependency>
    </dependencies>
    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-jar-plugin</artifactId>
                <version>${maven.jar.plugin.version}</version>
                <executions>
                    <execution>
                        <id>create-jar</id>
                        <configuration>
                            <minimizeJar>true</minimizeJar>
                            <transformers>
                                <!-- add Main-Class to manifest file -->
                                <transformer implementation="org.apache.maven.plugins.shade.resource.ManifestResourceTransformer">
                                    <mainClass>SpankOdds</mainClass>
                                </transformer>
                            </transformers>
                            <!-- finalName>${project.artifactId}</finalName -->
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
</project>
