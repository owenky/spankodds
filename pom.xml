<?xml version="1.0" encoding="GBK"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>


    <!-- see ../readme.txt for more info -XFZ@20200517-->
    <parent>
        <groupId>com.sbt</groupId>
        <artifactId>common-server-dependency</artifactId>
        <version>1.0.0</version>
        <relativePath>../jxc-common/commonServerDependency_xml</relativePath>
    </parent>

    <groupId>com.sbt</groupId>
    <artifactId>tb-server</artifactId>
    <version>${tb.server.version}</version>
    <name>tb-server</name>
    <description>config tb-server module</description>

    <dependencies>
        <dependency>
            <groupId>com.sbt</groupId>
            <artifactId>sbtct</artifactId>
            <version>${sbtct.version}</version>
            <scope>compile</scope>
        </dependency>
        <dependency>
            <groupId>com.sbt</groupId>
            <artifactId>jxc-client</artifactId>
            <version>${jxc.client.version}</version>
            <scope>compile</scope>
        </dependency>
        <dependency>
            <groupId>com.sbt</groupId>
            <artifactId>tb-client</artifactId>
            <version>${tb.client.version}</version>
            <scope>compile</scope>
        </dependency>
		<dependency>
            <groupId>com.sbt</groupId>
            <artifactId>jxc-server</artifactId>
            <version>${jxc.server.version}</version>
            <scope>compile</scope>
        </dependency>
        <dependency>
            <groupId>com.sbt</groupId>
            <artifactId>tb-common</artifactId>
            <version>${tb.common.version}</version>
            <scope>compile</scope>
        </dependency>
    </dependencies>
    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-shade-plugin</artifactId>
                <version>3.2.0</version>
                <executions>
                    <execution>
                        <id>create-fat-jar</id>
                        <phase>package</phase>
                        <goals>
                            <goal>shade</goal>
                        </goals>
                        <configuration>
                            <transformers>
                                <!-- add Main-Class to manifest file -->
                                <transformer implementation="org.apache.maven.plugins.shade.resource.ManifestResourceTransformer">
                                    <mainClass>com.sbt.control.TbServerMainApplication</mainClass>
                                </transformer>
                            </transformers>
                            <!-- finalName>${project.artifactId}</finalName -->
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
</project>
